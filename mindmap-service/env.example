# Mind Map Service Environment Variables

# OpenAI API Key (optional - for OpenAI embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=8000
HOST=0.0.0.0

# CORS Settings (in production, specify your frontend domain)
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Logging
LOG_LEVEL=INFO

# Model Configuration
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_CLUSTERING_METHOD=kmeans
DEFAULT_N_CLUSTERS=5

# Scraping Configuration
DEFAULT_SCRAPING_TIMEOUT=10
DEFAULT_SCRAPING_DELAY=1.0
DEFAULT_MAX_CONTENT_LENGTH=5000 